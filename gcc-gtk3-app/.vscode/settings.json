{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.autoIndent": "full",

    // Files Configuration
    "files.autoSave": "off",
    "files.trimTrailingWhitespace": true,

    // C/C++ Configuration (assuming you have the C/C++ extension installed)
    "C_Cpp.default.includePath": ["${workspaceFolder}/**"],
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.default.compilerPath": "/usr/bin/gcc",
    // "C_Cpp.default.compilerArgs": ["-Wno-unused-parameter"],
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: LLVM, IndentWidth: 4, ColumnLimit: 100, BreakBeforeBraces: Allman, AlignAfterOpenBracket: DontAlign, AlignOperands: DontAlign, ContinuationIndentWidth: 4 }"

}

